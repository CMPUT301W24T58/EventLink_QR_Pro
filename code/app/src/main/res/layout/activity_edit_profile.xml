<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/profPicImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_profile_placeholder" /> <!-- Replace with your image resource -->

    <Button
        android:id="@+id/chooseImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profPicImageView"
        android:layout_marginStart="76dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_background"
        android:layout_toEndOf="@id/profPicImageView"
        android:textColor="#FFFFFF"
        android:text="Upload" />

    <Button
        android:id="@+id/createImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseImageButton"
        android:layout_marginStart="76dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/profPicImageView"
        android:background="@drawable/button_background"
        android:text="Generate"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/removeImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createImageButton"
        android:layout_marginStart="175dp"
        android:layout_marginTop="-97dp"
        android:background="@drawable/back"
        android:layout_toEndOf="@id/profPicImageView"
        android:textColor="#FFFFFF"
        android:text="Delete" />
    </RelativeLayout>


    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:inputType="phone"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"/>

    <Switch
        android:id="@+id/trackingSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Tracking"
        android:layout_marginBottom="16dp"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:text="Save"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:textColor="#FFFFFF"
            android:text="Cancel"/>
    </LinearLayout>

</LinearLayout>
