<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with title and calendar icon -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Events"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- android:src="@drawable/ic_calendar" -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- Search bar -->
    <!-- android:drawableLeft="@drawable/ic_search" -->
    <EditText
        android:id="@+id/search_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search Events"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:padding="12dp"/>

    <!-- Events list (ListView) -->
    <ListView
        android:id="@+id/events_list_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:divider="#264528"
        android:dividerHeight="3dp"/>

    <!-- Create Event Button -->
    <!-- android:drawableRight="@drawable/ic_add" -->
    <Button
        android:id="@+id/create_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:gravity="center"
        android:drawableRight="@drawable/drawable_with_negative_margin"
        android:background="@drawable/darker_button"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

</LinearLayout>
